{

   "parser": "babel-eslint",
   "extends": [
      "airbnb",
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/react"
   ],
   "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "jest": true,
      "node": true
   },
   "globals": {
      "window": true,
      "document": true
   },
   "settings": {
      "import/resolver": {
         "node": {
            "paths": [ "./src" ],
            "extensions": [ ".js" ]
         }
      }
   },
   "rules": {
      "jsx-a11y/href-no-hash": [ "off" ],
      "react/jsx-filename-extension": 0,
      "import/prefer-default-export": 0,
      "space-in-parens": [ 1, "always" ],
      "arrowParens": [ "always" ],
      "semi": [ 1, "always" ],
      "singleQuote": true,
      "trailingComma": "es5"
   }
}